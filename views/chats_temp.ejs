  <main class="main">
    <div class="container-mine">
      <div class="form-submition mb-2" id="create-chat-input">
        <div class="input-group">
          <input type="text" class="form-control" id="name-input" placeholder="Recipient's username" aria-label="Recipient's username">
          <button class="btn btn-primary" type="button" id="button-addon">Create New</button>
        </div>        
      </div>

      <div class="list-group list-group-radio gap-1 frame" id="frame">
        <% for (let i = 0; i < chats.length; i++) { %>  
          <% if (chats[i].chatIsMine) { %>
          <div id="<%= chats[i].chatId %>" class="chat-template position-relative mine">
              <button class="list-group-item py-3">
                <strong class="fw-semibold"><%= chats[i].chatName %></strong>
                <div class="delete-chat">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                  </svg>
                </div> 
              </button>
            </div>
          <% } else { %>
          <div id="<%= chats[i].chatId %>" class="chat-template position-relative">
            <button class="list-group-item py-3">
              <strong class="fw-semibold chat-name"><%= chats[i].chatName %></strong>
              <img src="http://localhost:1069/<%= chats[i].creatorAvatar %>" class="chat-avatar">   
            </button>
          </div>     
          <% } %>
        <% } %>
      </div>
    </div>
  </main>

  