        const addUsers = (members) => {
          let users = '';
          for (let i = 0; i < members.length; i++) 
            users += `<li><a class="dropdown-item">${members[i].name}</a></li>\n`;
          return users;
        };
        const createNewMessage = (content) => (
          `
              <li class="messageFrame">
                <div class="img-container bi text-muted flex-shrink-0 me-3"><img src="/<%= user.avatar %>" alt="avatar" class="img-thumbnail" title="<%= user.name %>"></div>
